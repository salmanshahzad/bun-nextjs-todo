{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "bun-nextjs-todos",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "build": "bunx --bun next build",
        "db:generate": "bunx drizzle-kit generate",
        "db:migrate": "bunx --bun drizzle-kit migrate",
        "dev": "bunx --bun next dev --turbopack",
        "format": "bunx --bun prettier --write .",
        "start": "bunx --bun next start",
        "typecheck": "bunx --bun tsc"
    },
    "dependencies": {
        "classnames": "^2.5.1",
        "drizzle-orm": "^0.38.4",
        "next": "^15.1.5",
        "postgres": "^3.4.5",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-icons": "^5.4.0",
        "redis": "^4.7.0",
        "winston": "^3.17.0",
        "zod": "^3.24.1",
        "zustand": "^5.0.3"
    },
    "devDependencies": {
        "@tsconfig/strictest": "^2.0.5",
        "@types/bun": "^1.1.17",
        "@types/react": "^19.0.7",
        "@types/react-dom": "^19.0.3",
        "daisyui": "^4.12.23",
        "drizzle-kit": "^0.30.2",
        "postcss": "^8.5.1",
        "prettier": "^3.4.2",
        "prettier-plugin-tailwindcss": "^0.6.10",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.7.3"
    }
