{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "bun-nextjs-todos",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "build": "bunx --bun next build",
        "db:generate": "bunx drizzle-kit generate",
        "db:migrate": "bunx --bun drizzle-kit migrate",
        "dev": "bunx --bun next dev --turbopack",
        "format": "bunx --bun prettier --write .",
        "start": "bunx --bun next start",
        "typecheck": "bunx --bun tsc"
    },
    "dependencies": {
        "classnames": "^2.5.1",
        "drizzle-orm": "^0.39.3",
        "next": "^15.1.7",
        "postgres": "^3.4.5",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-icons": "^5.5.0",
        "redis": "^4.7.0",
        "winston": "^3.17.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@tsconfig/strictest": "^2.0.5",
        "@types/bun": "^1.2.2",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "daisyui": "^4.12.23",
        "drizzle-kit": "^0.30.4",
        "postcss": "^8.5.3",
        "prettier": "^3.5.1",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.7.3"
    }
